@model IEnumerable<integradora555.Models.Alquiler>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a class="btn btn-primary" asp-action="Create">Crear nuevo</a>
</p>
<table class="table color">
    <thead>
        <tr >
            <th>
                @Html.DisplayNameFor(model => model.FechaDeAlquiler)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClienteNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CasaNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Casa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDeAlquiler)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CasaNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Casa.NombreDeCasa)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.AlquilerId">Editar</a> | |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.AlquilerId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
