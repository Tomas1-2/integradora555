@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <h1 class="color">@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline color" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-ligth text-light ">Click aqui para salir</button>
            </form>
        }
        else
        {
            <p>Ha cerrado correctamente la sesión de la aplicación.</p>
        }
    }
</header>
